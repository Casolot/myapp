<% if sesion[:user_id] %>
    <%= link_to t('.signout'), 
    session_path(session[:user_id]),
    data: {"turbo-method": :delete}, 
    class :'btn btn-sm btn-primary' %>
    <%= link_to t('.signup'), posts_path, class :'btn btn-sm btn-secondary' %>
<% else %>
    <% if User.all.any? %>
        <%= link_to t('.signin'), posts_path, class :'btn btn-sm btn-primary' %>
    <% else %>
        <%= link_to t('.signup'), posts_path, class :'btn btn-sm btn-secondary' %>
    <% end %>
<% end %> 